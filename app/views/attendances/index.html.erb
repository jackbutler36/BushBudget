<!DOCTYPE html>
<p id="notice"><%= notice %></p>
<style>
  body{
    margin:0 !important;
    padding: 5px !important;
    vertical-align: middle;
  }
    table, th, td {
    border:1px solid black;
  }
</style>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" >
        <img src="/images/logo.jpg" alt="BushSchoolGSGA logo" height="50">
      </a>
        
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to 'Dashboard', admin_session_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Meetings', meetings_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Users', users_path, class: 'nav-link' %>
          </li>
        </ul>
      </div>
    

      <div class="collapse navbar-collapse justify-content-end" id="navbarCollapse">
        <ul class="navbar-nav">
          <li class="nav-item">
            <%=button_to('Logout', destroy_admin_session_path, data: {turbo: 'false'}, method: :delete, class: "btn btn-outline-success mr-1") %>
          </li>
        </ul>
      </div>
    </nav>

    <div class="mask" >
      <div class = "d-flex justify-content-center align-items-center h-100">
        <div class = "text-black">
          <h1 class="mb-3">Attendance History</h1>
        </div>
      </div>
    </div>

    <br></br>


<% if current_user %>
<div class="mask" >
  <div class = "d-flex justify-content-center align-items-center h-100">
      <div class = "text-black">
<table>
  <thead>
      <th>Description</th>
      <th>Date</th>
      <th>Present</th>
    </tr>
  </thead>

  <tbody>
    <% @meetings.each do |meeting| %>
      <% attended = false %>
      <% @user_attendance.each do |attendance| %>
        <% if meeting.password == attendance.password %>
          <% attended = true %>
        <% end%>
        </tr>
      <% end %>
      <tr>
        <td><%= meeting.description %></td>
        <td><%= meeting.date %></td>
        <% if !attended && !(current_user.excusal_date > meeting.date) %>
          <td id="absent">NO</td>
        <% end %>
        <% if attended %>
          <td id="present">YES</td>
        <% end %>
        <% if !attended && current_user.excusal_date > meeting.date %>
          <td id="absent" style="background-color:orange;">EXCUSED</td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>

<%= link_to 'Back', '/', class: "btn btn-outline-danger" %>

<br>
<% end %>
<% if current_admin %>
<div class="mask" >
  <div class = "d-flex justify-content-center align-items-center h-100">
    <div class = "text-black">
      <h1>Members in bad attendance standing</h1>
    </div>
  </div>
</div>
<br></br>
<div class="mask" >
  <div class = "d-flex justify-content-center align-items-center h-100">
      <div class = "text-black">
<table>
  <thead>
      <th>Name</th>
      <th>Absences</th>
      <th rowspan="2"></th>
    </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
    <% absences = 0 %>
    <% @meetings.each do |meeting| %>
      <% attended = false %>
      <% (Attendance.where(userNum: user.uin)).each do |attendance| %>
        <% if meeting.password == attendance.password%>
          <% attended = true %>
        <% end%>
        </tr>
      <% end %>
      <% if !attended && user.excusal_date < meeting.date %>
        <% absences = absences + 1 %>
      <% end %>
    <% end %>
    <% if absences >= 3 %>
      <tr>
        <td><%= user.first_name + " " + user.last_name %></td>
        <td><%= absences %></td>
        <td><%= link_to 'View Profile and Attendance History', user %></td>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>
</div>
</div>
</div>

<%= link_to 'Back', '/', class: "btn btn-outline-danger" %>
<% end %>
