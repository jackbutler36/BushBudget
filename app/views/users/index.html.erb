<p id="notice"><%= notice %></p>

<h1>Users</h1>

<%= search_form_for @q do |f| %>

  <%= f.label :first_name_start %>
  <%= f.search_field :first_name_start %>

  <%= f.label :last_name %>
  <%= f.search_field :last_name %>

  <%= f.label :street_address %>
  <%= f.search_field :street_address %>

  <%= f.label :street_address_line_two %>
  <%= f.search_field :street_address_line_two %>

  <%= f.label :city %>
  <%= f.search_field :city %>

  <%= f.label :state %>
  <%= f.search_field :state %>

  <%= f.label :zip_code %>
  <%= f.search_field :zip_code %>

  <%= f.label :phone_number %>
  <%= f.search_field :phone_number %>

  <%= f.label :is_admin %>
  <%= f.search_field :is_admin %>

  <%= f.label :is_committee_leader %>
  <%= f.search_field :is_committee_leader %>

  <%= f.submit %>
<% end %>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Street address</th>
      <th>Street address line two</th>
      <th>City</th>
      <th>State</th>
      <th>Zip code</th>
      <th>Phone number</th>
      <th>Is admin</th>
      <th>Is committee leader</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.street_address %></td>
        <td><%= user.street_address_line_two %></td>
        <td><%= user.city %></td>
        <td><%= user.state %></td>
        <td><%= user.zip_code %></td>
        <td><%= user.phone_number %></td>
        <td><%= user.is_admin %></td>
        <td><%= user.is_committee_leader %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

