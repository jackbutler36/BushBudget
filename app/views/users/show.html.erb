<h1>Attendance History</h1>
<table>
  <thead>
      <th>Description</th>
      <th>Date</th>
      <th>Present</th>
      <th rowspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @meetings.each do |meeting| %>
      <% attended = false %>
      <% @attendances.each do |attendance| %>
        <% print meeting.password %>
        <% print attendance.password %>
        <% if meeting.password == attendance.password %>
          <% attended = true %>
        <% end%>
        </tr>
      <% end %>
      <tr>
        <td><%= meeting.description %></td>
        <td><%= meeting.date %></td>
        <% if !attended %>
          <td id="absent">NO</td>
        <% else %>
          <td id="present">YES</td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

