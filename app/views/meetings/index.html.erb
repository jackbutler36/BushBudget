<p id="notice"><%= notice %></p>
<% if current_admin %>
<h1>Meetings</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Date</th>
      <th>Password</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meetings.each do |meeting| %>
      <tr>
        <td><%= meeting.description %></td>
        <td><%= meeting.date %></td>
        <td><%= meeting.password %></td>
        <td><%= link_to 'View Attendees', meeting %></td>
        <td><%= link_to 'Edit', edit_meeting_path(meeting) %></td>
        <td><%= link_to 'Destroy', meeting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Back', 'dashboard#index' %>
<br>

<%= link_to 'New Meeting', new_meeting_path %>
<%= button_to 'Logout', destroy_admin_session_path, data: {turbo: 'false'}, method: :delete %>
<% else %>
<%= button_to 'Login as Admin', new_admin_session_path %>
<%= button_to 'Login as User', new_user_session_path %>
<% end %>

